<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/station_rl_coupon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

        <ImageView
            android:id="@+id/station_iv_eplus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            tools:src="@drawable/station_ensd_detail_eplus_zfb" />

        <TextView
            android:id="@+id/station_tv_eplus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/station_iv_eplus_icon"
            android:gravity="center"
            android:text="支付宝支付"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/station_iv_eplus_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            tools:src="@drawable/station_ensd_detail_eplus_un_select" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="#F2F5F7" />
    </RelativeLayout>
</layout>