<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/station_ad_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/station_ensd_ad_dialog_shape_item"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingTop="2dp"
            android:paddingRight="14dp"
            android:paddingBottom="2dp"
            android:text="加油日"
            android:textColor="#FF681C"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/station_ad_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/station_ad_left"
            android:gravity="center"
            android:text="使用农行银行卡，满200-50"
            android:textColor="#666666"
            android:textSize="11sp" />


    </RelativeLayout>
</layout>