<?xml version="1.0" encoding="utf-8"?>
<layout>

    <merge xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/station_tv_confirm_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/station_btn_go"
                android:layout_alignParentLeft="true"
                android:text="215.06"
                android:textColor="#FF681C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/station_tv_confirm_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/station_tv_confirm_price"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:text="优惠¥15.05"
                android:textColor="#FF681C"
                android:textSize="11sp" />

            <Button
                android:id="@+id/station_btn_go"
                android:layout_width="130dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/station_ensd_detail_confirm_bg"
                android:text="提交订单"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </merge>

</layout>